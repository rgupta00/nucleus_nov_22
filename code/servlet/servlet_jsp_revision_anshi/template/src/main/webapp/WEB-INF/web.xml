<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <!--Deployemnt descriptor
        tomcat refer this file to map a servlet
    -->
    <servlet>
        <servlet-name>hc</servlet-name>
        <servlet-class>com.demo.HelloController</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>rajeev gupta</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>hc</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bc</servlet-name>
        <servlet-class>com.demo.ByController</servlet-class>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>bc</servlet-name>
        <url-pattern>/by</url-pattern>
    </servlet-mapping>
    <!--context param is per application-->
    <context-param>
        <param-name>emailid</param-name>
        <param-value>rgupta.mtech@gmail.com</param-value>
    </context-param>
</web-app>